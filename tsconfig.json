{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
          "@src/*": ["./src/*"],
          "@core/*":["./src/core/*"]
      },
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
  }